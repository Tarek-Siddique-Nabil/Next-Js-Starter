{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "prettier",
    "plugin:drizzle/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "check-file",
    "n",
    "drizzle"
  ],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "**/migrations/*"
  ],
  "rules": {
    "no-console": [
      "warn"
    ],
    "node/prefer-global/process": [
      "off"
    ],
    "prefer-arrow-callback": [
      "error"
    ],
    "prefer-template": [
      "error"
    ],
    "semi": [
      "error"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "n/no-process-env": [
      "error"
    ],
    "check-file/filename-naming-convention": [
      "error",
      {
        "**/*.{ts,tsx}": "KEBAB_CASE"
      },
      {
        "ignoreMiddleExtensions": true
      }
    ],
    "check-file/folder-naming-convention": [
      "error",
      {
        "src/**/!^[.*": "KEBAB_CASE"
      }
    ]
  }
}